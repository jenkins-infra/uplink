{
  "compilerOptions": {
    "alwaysStrict" : true,
    "outDir": "./build",
    "module" : "commonjs",
    "skipLibCheck": true,
    "lib" : ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers" : true,
    "target": "es2015",
    "sourceMap": true,
    "typeRoots" : [
        "./node_modules/@types"
    ]
  },
  "include": [
      "./src/**/*"
  ]
}
